{
  "schemaVersion": "2.2",
  "description": "RunCommandInstallPatchS21-22-1-Windows",
  "parameters": {
  },
  "mainSteps": [
    {
      "action": "aws:runPowerShellScript",
      "name": "lookForPatchS21",
      "inputs": {
        "timeoutSeconds": 300 ,
        "runCommand": ["while (!(Test-Path -Path 'C:\\Program Files\\Precisely\\ExtractedPatches\\cdq20221s21.zip')) {Start-Sleep 10}"]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "stopServer",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["Stop-Service -Name 'spectrum-server' -Force"]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "listenForServerStop",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["while($true){ Get-Content 'C:\\Program Files\\Precisely\\Spectrum\\server\\logs\\spectrum-server.log' -Tail 1 -Wait | Select-String 'Precisely Spectrum Technology Platform shutdown complete' | %{write-host Found $_; break}}"]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "createBackupFolder",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["New-Item -Path 'C:\\Program Files\\Precisely\\PatchesBackups' -Name 'PatchS21' -ItemType 'directory'"]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "backupFilesLib",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["Move-Item -Path 'C:\\Program Files\\Precisely\\Spectrum\\server\\modules\\c1p\\lib' -Destination 'C:\\Program Files\\Precisely\\PatchesBackups\\PatchS21\\lib' "]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "backupFilesUncCar",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["Move-Item -Path 'C:\\Program Files\\Precisely\\Spectrum\\server\\deploy\\unc-22.1.car' -Destination 'C:\\Program Files\\Precisely\\PatchesBackups\\PatchS21\\' "]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "backupFilesUncConsole",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["Move-Item -Path 'C:\\Program Files\\Precisely\\Spectrum\\server\\deploy\\unc-22.1.console' -Destination 'C:\\Program Files\\Precisely\\PatchesBackups\\PatchS21\\' "]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "extractPatchS21",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["Expand-Archive -LiteralPath 'C:\\Program Files\\Precisely\\ExtractedPatches\\cdq20221s21.zip' -DestinationPath 'C:\\Program Files\\Precisely\\Spectrum' -Force"]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "startServer",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["Start-Service -Name 'spectrum-server'"]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "startSleepServer",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["Start-Sleep -Seconds 15"]
      }
    },
    {
      "action": "aws:runPowerShellScript",
      "name": "listenForServerStart",
      "inputs": {
        "timeoutSeconds": 10800 ,
        "runCommand": ["while($true){ Get-Content 'C:\\Program Files\\Precisely\\Spectrum\\server\\logs\\spectrum-server.log' -Tail 1 -Wait | Select-String -Pattern 'Precisely Spectrum Technology Platform' | %{write-host Found $_; break}}"]
      }
    }
  ]
}